@model EntityManager.Domain.CodeFirst.Client

@{
    ViewBag.Title = "Delete";
}

    @using (Html.BeginForm("Delete", "Clients", FormMethod.Post)) {
        
        @Html.AntiForgeryToken()

        <div>
            <h5>Delete entity</h5><hr />
        </div>

        <h5>Are you sure you want to delete this entity?</h5>

        Html.RenderPartial("_Display", Model);

        <div class="button-set">
            <input type="submit" value="Delete" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary", @role = "button" })
        </div>
    }