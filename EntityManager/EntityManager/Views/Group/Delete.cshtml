@model EntityManager.Models.GroupSubgroup.GroupModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-header">
    <h3>Delete group</h3>
</section>

<h2>Are you sure you want to delete this group?</h2>
<section class="manage-section">
    <label class="standard-label">Group name:</label>
    <span class="standard-input">@Model.Name</span>
    <br />
    <label class="standard-label">Description:</label>
    <span class="standard-input">@Model.Description</span>
 </section>

<p>
    @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Cancel", "Index")
            </div>
        }
    </p>
