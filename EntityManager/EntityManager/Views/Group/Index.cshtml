@using EntityManager.Helpers
@model IEnumerable<EntityManager.Domain.CodeFirst.Group>

@{
    ViewBag.Title = "Group management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Group*@
<h5>Group management</h5><hr/>

<p>
    @Html.ActionLink("New", "Create", null, new { @class = "btn btn-success", @role = "button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new {id = item.Id})
        </td>
        <td>
            @Html.Truncate(item.Description, 35)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}
</table>
