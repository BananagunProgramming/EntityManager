@model EntityManager.Domain.CodeFirst.Subgroup

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Subgroup", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <section class="manage-section" id="edit">
        <div>
            <h5>Edit subgroup</h5><hr/>
        </div>
        <div>
            <h6>Subgroup name:</h6>
            @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
            <div>@Html.ValidationMessageFor(x => x.Name)</div>
        </div>
        <div>
            <h6>Description:</h6>
            @Html.TextAreaFor(model => model.Description, new {@rows = "5", @class = "form-control"})
            <div>@Html.ValidationMessageFor(x => x.Description)</div>
        </div>
        <div class="button-set">
            <input type="submit" class="btn btn-success" value="Save">
            @Html.ActionLink("Cancel", "Index", null, new {@class = "btn btn-secondary", @role = "button"})
        </div>
    </section>
}